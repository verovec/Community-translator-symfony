{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{ profile.getFirstName }} {{ profile.getLastName }}</h1>
    
    
    {% if profile.getDescription %}
        <p>Description : {{ profile.getDescription }}</p>
    {% endif %}
    {% if edit_button %}
    <!-- <a style="text-decoration: none;" href="/profile/edit/{{ profile.id }}"> -->
    <a href="/profile/edit/{{ profile.id }}" style="text-decoration: none;">
        <button>Edit</button>
    </a>
    {% endif %}

    {% if edit == TRUE %}
        {{ form(form) }}
    {% endif %}

    {% if projects %}
        {% for project in projects %}
        <hr>
            <a href="/project/{{ project.id }}" style="text-decoration: none;">
                <div style="border: solid 1px;">
                    <h2>{{ project.name }}</h2>
                    <p>lang : {{ project.lang }}</p>
                    {% for elem in project.source %}
                        <p>â€¢ {{ elem.content }}</p>
                    {% endfor %}
                </div>
            </a>
        {% endfor %}
    {% endif %}
</div>
{% endblock %}
